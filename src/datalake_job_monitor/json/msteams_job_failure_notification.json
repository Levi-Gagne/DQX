{
  "type": "message",
  "attachments": [
    {
      "contentType": "application/vnd.microsoft.card.adaptive",
      "content": {
        "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
        "version": "1.3",
        "type": "AdaptiveCard",
        "body": [
          {
            "type": "Container",
            "style": "emphasis",
            "items": [
              {
                "type": "ColumnSet",
                "columns": [
                  {
                    "type": "Column",
                    "width": "auto",
                    "items": [
                      {
                        "type": "Image",
                        "url": "{{gif_url}}",
                        "size": "Medium"
                      }
                    ]
                  },
                  {
                    "type": "Column",
                    "width": "stretch",
                    "items": [
                      {
                        "type": "TextBlock",
                        "text": "ðŸš¨ Job Failure Alert ðŸš¨",
                        "weight": "Bolder",
                        "size": "Large",
                        "spacing": "Large",
                        "horizontalAlignment": "center",
                        "color": "Attention"
                      },
                      {
                        "type": "TextBlock",
                        "weight": "Bolder",
                        "text": "Date: {{current_datetime}}",
                        "isSubtle": true,
                        "horizontalAlignment": "center",
                        "spacing": "None",
                        "wrap": true
                      }
                    ]
                  }
                ]
              }
            ]
          },
          {
            "type": "Container",
            "items": [
              {
                "type": "TextBlock",
                "weight": "Bolder",
                "text": "{{greeting_text}}",
                "wrap": true,
                "spacing": "Medium"
              },
              {
                "type": "TextBlock",
                "weight": "Bolder",
                "text": "A job failure has occurred that requires your attention. Please review the details below and take the appropriate actions.",
                "wrap": true
              }
            ]
          },
          {
            "type": "Container",
            "separator": true,
            "spacing": "Medium",
            "items": [
              {
                "type": "TextBlock",
                "text": "Job Details",
                "weight": "Bolder",
                "size": "Medium",
                "color": "Accent",
                "wrap": true
              },
              {
                "type": "FactSet",
                "facts": [
                  {"title": "Job Name:", "value": "{{job_name}}"},
                  {"title": "Job ID:", "value": "{{job_id}}"},
                  {"title": "Run ID:", "value": "{{run_id}}"},
                  {"title": "Start Time:", "value": "{{start_time}}"},
                  {"title": "Duration:", "value": "{{duration}}"}
                ]
              },
              {
                "type": "TextBlock",
                "text": "[View Run Page]({{run_page_url}})",
                "color": "Warning",
                "weight": "Bolder",
                "wrap": true,
                "spacing": "Medium"
              }
            ]
          },
          {
            "type": "Container",
            "separator": true,
            "spacing": "Medium",
            "items": [
              {
                "type": "TextBlock",
                "text": "Note: This message was generated automatically - {{mentions_text}}",
                "wrap": true,
                "color": "Warning",
                "weight": "Bolder"
              }
            ]
          }
        ],
        "footer": {
          "type": "Container",
          "items": [
            {
              "type": "TextBlock",
              "text": "Please address this issue immediately. For any questions, contact the system admin.",
              "wrap": true,
              "horizontalAlignment": "Center",
              "spacing": "Medium"
            }
          ]
        },
        "msteams": {
          "entities": []
        }
      }
    }
  ]
}